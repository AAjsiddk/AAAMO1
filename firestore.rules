/**
 * @fileoverview Firestore Security Rules for the Smart Personal World application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Each user has complete control over their own data,
 * and no user can access another user's data. Data is isolated using path-based rules and verified identity.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles and preferences.
 * - /users/{userId}/files/{fileId}: Stores files for each user.
 * - /users/{userId}/auditLogs/{auditLogId}: Stores audit logs for each user.
 * - /users/{userId}/tasks/{taskId}: Stores tasks for each user.
 * - /users/{userId}/tasks/{taskId}/attachments/{attachmentId}: Stores attachments for tasks.
 * - /users/{userId}/habits/{habitId}: Stores habits for each user.
 * - /users/{userId}/habits/{habitId}/marks/{markId}: Stores daily habit tracking marks.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Do not allow listing all users.

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    match /users/{userId}/files/{fileId} {
      allow get, list, create, update, delete: if isOwner(userId);
      // Ensure data integrity on create/update
      allow create, update: if request.resource.data.userId == userId;
    }

    match /users/{userId}/auditLogs/{auditLogId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      // Audit logs should be immutable
      allow update, delete: if false;
    }

    match /users/{userId}/tasks/{taskId} {
      allow get, list, create, update, delete: if isOwner(userId);
      // Ensure data integrity on create/update
      allow create, update: if request.resource.data.userId == userId;
    }
    
    match /users/{userId}/tasks/{taskId}/attachments/{attachmentId} {
        allow get, list, create, update, delete: if isOwner(userId);
        // Ensure data integrity
        allow create, update: if request.resource.data.userId == userId && request.resource.data.taskId == taskId;
    }

    match /users/{userId}/habits/{habitId} {
       allow get, list, create, update, delete: if isOwner(userId);
        // Ensure data integrity
       allow create, update: if request.resource.data.userId == userId;
    }
    
    match /users/{userId}/habits/{habitId}/marks/{markId} {
        allow get, list, create, update, delete: if isOwner(userId);
        // Ensure data integrity
        allow create, update: if request.resource.data.userId == userId && request.resource.data.habitId == habitId;
    }
  }
}
